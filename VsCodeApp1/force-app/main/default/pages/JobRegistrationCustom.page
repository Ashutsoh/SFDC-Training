<apex:page Controller="JobCustomController">
    <apex:stylesheet value="{!URLFOR($Resource.jobcss,'cssonjob.css')}"/>
    <apex:includeScript value="{!$Resource.jobjavascript}"/>
    
    <apex:form id="form"> 
        <div class="outerdiv">
            <apex:pageBlock mode="edit" id="pb">
                <!-- add block section color-->
                <apex:pageBlockSection title="Job Wizard" >
                </apex:pageBlockSection>
                <div align="center">
                    <apex:image url="{!URLFOR($Resource.maya,'/image/img1.png'
                                     )}" width="200" height="60"/>
                </div>
                
                <apex:pageBlockSection id="pbs1" columns="2">
                    
                    <apex:inputField value="{!Job.Name}" id="nameid"/>
                    <apex:inputField value="{!Job.Manager__c}"  id="managerid"/>
                    <apex:inputField value="{!Job.Job_Type__c}"   id="jobtypeid"/>
                    <apex:inputField value="{!Job.Description__c}"  id="descriptionid"/>
                    <apex:inputField value="{!Job.No_Of_Position__c}"  id="noofpositionid"/>
                    <apex:inputField value="{!Job.Expires_On__c}"  id="lastdateid"/>
                    
                    <div align="center">
                        <apex:commandButton value="Save&Next"  action="{!save}"
                                            onclick="jobvalidation(
                                                     '{!$Component.form.pb.pbs1.nameid}',
                                                     '{!$Component.form.pb.pbs1.managerid}',
                                                     '{!$Component.form.pb.pbs1.jobtypeid}',
                                                     '{!$Component.form.pb.pbs1.descriptionid}',
                                                     '{!$Component.form.pb.pbs1.noofpositionid}',
                                                     '{!$Component.form.pb.pbs1.lastdateid}')" />  
                    </div>
                </apex:pageBlockSection>
            </apex:pageBlock>
        </div>       
    </apex:form>
</apex:page>